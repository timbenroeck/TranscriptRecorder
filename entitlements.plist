<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required: allows the app to be notarized and run on other Macs -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Required for py2app: disable library validation so bundled .so/.dylib load -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Required: Transcript Recorder uses Apple Events / Accessibility API -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Required: Python's ctypes and C extensions need JIT -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Required: py2app sets DYLD_LIBRARY_PATH and similar variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>
