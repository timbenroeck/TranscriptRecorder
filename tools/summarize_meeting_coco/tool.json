{
  "display_name": "Summarize Meeting",
  "description": "Generate an AI-powered meeting summary using Cortex. Requires meeting_details.txt and meeting_transcript.txt in the recording directory.",
  "script": "summarize_meeting_coco.sh",
  "streaming": true,
  "stream_parser": "cortex_json",
  "idle_warning_seconds": 120,
  "idle_kill_seconds": 300,
  "parameters": [
    {
      "flag": "-m",
      "label": "Meeting Directory",
      "builtin": "meeting_directory",
      "required": true
    },
    {
      "flag": "-o",
      "label": "Output Directory",
      "default": "/Users/tbenroeck/Documents/obsidian_vaults/snowflake/Meetings",
      "required": true
    },
    {
      "flag": "-f",
      "label": "First Name",
      "default": "Tim",
      "required": false
    },
    {
      "flag": "-l",
      "label": "Last Name",
      "default": "Benroeck",
      "required": false
    },
    {
      "flag": "-c",
      "label": "Cortex Connection",
      "default": "Snowhouse",
      "required": false
    }
  ],
  "data_files": [
    {
      "file": ".cortex/skills/meeting-summarizer/known_names.json",
      "label": "Known Names",
      "description": "Names frequently mistranscribed by speech-to-text. Used to correct phonetic misspellings in transcripts (e.g. 'Fawni' â†’ 'Phani Alapaty').",
      "editor": "string_list"
    }
  ]
}
